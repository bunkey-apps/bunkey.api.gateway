{
    "root": true,
    "extends": "airbnb-base",
    "env": {
        "es6": true,
        "node": true
    },
    "plugins": [
        "import"
    ],
    "parserOptions": {
       "ecmaVersion": 2017,
       "sourceType": "module",
       "ecmaFeatures": {
         "globalReturn": true,
         "experimentalObjectRestSpread": true
       }
    },
    "rules": {
        "indent": "off",
        "no-tabs": "off",
        "no-param-reassign": "off",
        "no-trailing-spaces": "off",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": 1,
        "func-names": ["error", "never"],
        "consistent-return": "off",
        "no-var": 1,
        "class-methods-use-this": "off",
        "spaced-comment": ["error", "always", { "exceptions": ["*"] }],
        "max-len": ["error", { "ignoreComments": true }, { "code": 120 }],
        "no-console": "off"
    },
    "globals": {
        "cano": true,
        "AuthController": true,
        "UserController": true,
        "ClientController": true,
        "PlanController": true,
        "ContractController": true,
        "PaymentController": true,
        "SharedController": true,
        "SharedService": true,
        "UserService": true,
        "ObjectController": true,
        "ObjectService": true,
        "ClientService": true,
        "ContractService": true,
        "PaymentService": true,
        "RequestService": true,
        "TagService": true,
        "TokenService": true,
        "AuthPolicies": true,
        "JWTService": true,
        "InvitationService": true,
        "CanoError": true,
        "AuthorizationError": true,
        "TagController": true
    }
}
